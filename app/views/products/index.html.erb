<h1>Products page</h1>

<%= form_tag do %>
   <%= label_tag :product %>
   <%= text_field_tag :product %>
   <br>

   <%= submit_tag 'add to cart' %>
<% end %>

<h3>Current Cart:</h3>
<ul>
   <% if cart && cart.any? %>
      <% cart.each do |item| %>
         <li><%= item %></li>
      <% end %>
   <% end %>
</ul>


